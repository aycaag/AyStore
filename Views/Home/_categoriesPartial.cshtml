@model CategoryViewModel


    <!-- Offer Start -->
    <div class="container-fluid offer pt-5">
        <div class="row px-xl-5">
            @foreach(var item in ViewBag.Categories as List<CategoryViewModel>)

            {
                <div class="col-md-6 pb-4">
                    <div class="position-relative bg-secondary text-center text-md-right text-white mb-2 py-5 px-5">
                        <img src=@item.Image alt="">
                        <div class="position-relative" style="z-index: 1;">
                            <h5 class="text-uppercase text-primary mb-3"> %50'ye Varan İndirim </h5>
                            <h1 class="mb-4 font-weight-semi-bold">@item.Name</h1>
                            @* <a href="/Product/ProductbyCategory?categoryName=@item.Name" class="btn btn-outline-primary py-md-2 px-md-3">Ürünleri Gör</a>  *@
                            <form action="/Product/FilterbyProduct" method="post">
                            <input type="hidden" name="filters.CategoryName" value="@item.Name" />
                            <button type="submit" class="btn btn-outline-primary py-md-2 px-md-3">Ürünleri Gör</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- Offer End -->