@model LoginViewModel

<div class="d-flex justify-content-center" style="margin-top :50px;">
    <form action="/Register/Index" method="post" class="w-80" style="width: 60%; margin: auto;">
        
        <div class="text-center mb-4">
            <h3 class="section-title px-5"><span class="px-2"> Giriş Yap </span></h3>
        </div>

        <div class="mb-3">
            <label class="form-label">E-mail</label>
            <input asp-for="Email" class="form-control" type="text">
        </div>

        <div class="mb-3">
            <label class="form-label">Şifre</label>
            <input asp-for="Password" class="form-control" type="password">
        </div>

        <div class="text-center">
            <button class="btn btn-primary py-2" style="width: 30%;">Giriş</button>
        </div>

    </form>
</div>
